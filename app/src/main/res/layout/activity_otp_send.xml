<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotpasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="visible"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/municipal_corporation_faridabad_logo_256x256"
                android:layout_marginTop="@dimen/margin_10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/round_corner_card"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/where_you_want"
                        android:textAllCaps="true"
                        android:textColor="#125a2d"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="@dimen/margin_10"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@string/otp_con"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10">

                        <LinearLayout
                            android:id="@+id/viasms1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <RadioGroup
                                android:id="@+id/radioSex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <RadioButton
                                    android:id="@+id/viasms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/viasms"
                                    android:checked="true" />

                                <RadioButton
                                    android:id="@+id/viaemail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/viaemail" />

                            </RadioGroup>




                            <ImageView
                                android:id="@+id/sms_v1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone"
                                android:visibility="gone"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="via SMS"
                                android:textColor="#125a2d"
                                android:visibility="gone"/>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/viaemail1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/margin_10"
                            android:layout_alignParentRight="true"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/email_v"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="via EMAIL"
                                android:textColor="#125a2d"/>


                        </LinearLayout>





                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_5"
                        >




                        <TextView
                            android:id="@+id/mob_sms_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/m_no"
                            />


                        <EditText
                            android:id="@+id/user_email_or_sms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:background="@drawable/round_corner_edittext"
                            android:drawableLeft="@drawable/phone"
                            android:drawablePadding="@dimen/padding_large"
                            android:hint="@string/enter_mob"
                            android:inputType="textEmailAddress"
                            android:maxLength="40"
                            android:padding="@dimen/padding_medium"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorLightWhite"
                            android:textSize="@dimen/text_size_medium" />


                        <Button
                            android:id="@+id/submit_otp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/next"
                            android:background="@drawable/ripple_text_view"
                            android:backgroundTint="#565656"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--</android.support.v7.widget.CardView>-->

        </LinearLayout>










    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>